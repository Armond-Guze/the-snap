generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

enum AuthProvider {
  CLERK
  APPLE
  GOOGLE
  EMAIL_PASSWORD
}

enum ThemePreference {
  SYSTEM
  LIGHT
  DARK
}

enum OnboardingState {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum FollowTargetType {
  TEAM
  TOPIC
  AUTHOR
}

enum SubscriptionChannel {
  EMAIL
  PUSH
  IN_APP
}

enum SubscriptionTopic {
  BREAKING_NEWS
  DAILY_DIGEST
  TEAM_UPDATES
  FANTASY_UPDATES
  DRAFT_UPDATES
}

enum WebhookProvider {
  CLERK
  SANITY
}

enum WebhookEventStatus {
  RECEIVED
  PROCESSED
  SKIPPED
  FAILED
}

model User {
  id           String            @id @default(uuid()) @db.Uuid
  displayName  String?           @db.VarChar(120)
  primaryEmail String?           @db.VarChar(320)
  avatarUrl    String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  deletedAt    DateTime?

  authIdentities UserAuthIdentity[]
  preferences    UserPreference?
  follows        UserFollow[]
  subscriptions  UserSubscription[]

  @@index([createdAt])
  @@index([deletedAt])
}

model UserAuthIdentity {
  id             String       @id @default(uuid()) @db.Uuid
  userId         String       @db.Uuid
  provider       AuthProvider
  providerUserId String       @db.VarChar(191)
  email          String?      @db.VarChar(320)
  isPrimary      Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@unique([userId, provider])
  @@index([userId])
}

model UserPreference {
  id              String          @id @default(uuid()) @db.Uuid
  userId          String          @unique @db.Uuid
  favoriteTeam    String?         @db.VarChar(3)
  themePreference ThemePreference @default(SYSTEM)
  onboardingState OnboardingState @default(NOT_STARTED)
  onboardingCompletedAt DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFollow {
  id         String           @id @default(uuid()) @db.Uuid
  userId     String           @db.Uuid
  targetType FollowTargetType
  targetKey  String           @db.VarChar(120)
  metadata   Json?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetKey])
  @@index([targetType, targetKey])
  @@index([userId])
}

model UserSubscription {
  id        String              @id @default(uuid()) @db.Uuid
  userId    String              @db.Uuid
  channel   SubscriptionChannel
  topic     SubscriptionTopic
  enabled   Boolean             @default(true)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, channel, topic])
  @@index([userId])
}

model WebhookEventLog {
  id            String            @id @default(uuid()) @db.Uuid
  provider      WebhookProvider
  eventId       String            @db.VarChar(191)
  eventType     String            @db.VarChar(120)
  status        WebhookEventStatus @default(RECEIVED)
  attemptCount  Int               @default(1)
  firstSeenAt   DateTime          @default(now())
  lastAttemptAt DateTime          @default(now())
  processedAt   DateTime?
  lastError     String?
  payload       Json?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@unique([provider, eventId])
  @@index([provider, eventType])
  @@index([status, lastAttemptAt])
}

model AuthRateLimitState {
  id            String   @id @default(uuid()) @db.Uuid
  scope         String   @db.VarChar(80)
  identifier    String   @db.VarChar(191)
  windowStart   DateTime
  windowEndsAt  DateTime
  requestCount  Int      @default(0)
  blockedUntil  DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([scope, identifier])
  @@index([blockedUntil])
  @@index([windowEndsAt])
}

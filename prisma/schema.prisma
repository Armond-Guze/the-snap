generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

enum AuthProvider {
  CLERK
  APPLE
  GOOGLE
  EMAIL_PASSWORD
}

enum ThemePreference {
  SYSTEM
  LIGHT
  DARK
}

enum FollowTargetType {
  TEAM
  TOPIC
  AUTHOR
}

enum SubscriptionChannel {
  EMAIL
  PUSH
  IN_APP
}

enum SubscriptionTopic {
  BREAKING_NEWS
  DAILY_DIGEST
  TEAM_UPDATES
  FANTASY_UPDATES
  DRAFT_UPDATES
}

model User {
  id           String            @id @default(uuid()) @db.Uuid
  displayName  String?           @db.VarChar(120)
  primaryEmail String?           @db.VarChar(320)
  avatarUrl    String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  deletedAt    DateTime?

  authIdentities UserAuthIdentity[]
  preferences    UserPreference?
  follows        UserFollow[]
  subscriptions  UserSubscription[]

  @@index([createdAt])
  @@index([deletedAt])
}

model UserAuthIdentity {
  id             String       @id @default(uuid()) @db.Uuid
  userId         String       @db.Uuid
  provider       AuthProvider
  providerUserId String       @db.VarChar(191)
  email          String?      @db.VarChar(320)
  isPrimary      Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
  @@unique([userId, provider])
  @@index([userId])
}

model UserPreference {
  id              String          @id @default(uuid()) @db.Uuid
  userId          String          @unique @db.Uuid
  favoriteTeam    String?         @db.VarChar(3)
  themePreference ThemePreference @default(SYSTEM)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserFollow {
  id         String           @id @default(uuid()) @db.Uuid
  userId     String           @db.Uuid
  targetType FollowTargetType
  targetKey  String           @db.VarChar(120)
  metadata   Json?
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetType, targetKey])
  @@index([targetType, targetKey])
  @@index([userId])
}

model UserSubscription {
  id        String              @id @default(uuid()) @db.Uuid
  userId    String              @db.Uuid
  channel   SubscriptionChannel
  topic     SubscriptionTopic
  enabled   Boolean             @default(true)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, channel, topic])
  @@index([userId])
}
